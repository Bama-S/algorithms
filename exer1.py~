import pylab as pl
def afn(n):
    sum = 0
    while n>0:
    #print i
        n = n //2
        sum = sum+1
    return sum
print "10", afn(10)
print "100", afn(100)
print "1000",afn(1000)
print "10000",afn(10000)
print "100000", afn(100000)
#x= [10,100,1000,10000,100000,1000000,10000000,100000000]
#y= [afn(10),afn(100),afn(1000),afn(10000),afn(100000),afn(1000000),afn(10000000),afn(100000000)]
#z= [10,100,1000,10000,100000,1000000,10000000,100000000]
x= [10,100,1000,10000,100000]
y= [afn(10),afn(100),afn(1000),afn(10000),afn(100000)]
z= [10,100,1000,10000,100000]
pl.plot (x,z,'g')
pl.plot (x,y,'r')
pl.show()